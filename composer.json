{
	"name": "tenantcloud/composer-package",
	"description": "A template for composer packages",
	"minimum-stability": "stable",
	"license": "MIT",
	"require": {
		"php": ">=7.4 || ^8.0",
		"illuminate/database": "^8.0",
		"illuminate/auth": "^8.0",
		"illuminate/support": "^8.0",
		"webmozart/assert": "^1.9"
	},
	"require-dev": {
		"phpunit/phpunit": "^9.0",
		"orchestra/testbench": "^6.0",
		"laravel/laravel": "^8.0"
	},
	"autoload": {
		"psr-0": {
			"": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Tests\\": "tests/"
		}
	},
	"scripts": {
		"test": "vendor/bin/phpunit",
		"test-coverage": "vendor/bin/phpunit --coverage-html coverage",
		"cs-fix": "./tools/php-cs-fixer/vendor/bin/php-cs-fixer fix -v --show-progress=estimating",
		"phpstan":  "./tools/phpstan/vendor/bin/phpstan analyse"
	},
	"extra": {
		"laravel": {
			"providers": [
				"TenantCloud\\Providers\\MixinsServiceProvider"
			]
		}
	}
}

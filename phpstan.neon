includes:
	- tools/phpstan/vendor/phpstan/phpstan/conf/bleedingEdge.neon

parameters:
	level: 8
	tmpDir: ./tmp/phpstan

	paths:
		- src
		- tests

	ignoreErrors:
		-
			message: '#Call to protected method .+#i'
			path: '*Mixin.php'
		-
			message: '#Access to protected property .+Mixin::.+#i'
			path: '*Mixin.php'
		-
			message: '#Method .+Mixin::.+ invoked with \d parameters, 0 required.#i'
			path: '*Mixin.php'
